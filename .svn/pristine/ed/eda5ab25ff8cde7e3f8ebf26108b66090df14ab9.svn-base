.cardModal {
  .modalTop {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    width: 100%;
    // background-color: red !important;
    .actionStats {
      display: flex;
      width: 30% !important;
      // background-color: red !important;
    }
    .modalSpan {
      color: #a1a1a2 !important;
    }
  }

  .modalHeader {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 16px;
    .medalHeader1 {
      display: flex;
      align-items: center;
    }
  }
  .modalBodyTop {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  .ant-modal-body {
    padding: 16px;
  }

  .modalContent {
    display: flex;
    flex-direction: column;
  }

  .sourceIcon {
    width: 24px;
    margin-right: 8px;
  }

  .info,
  .metadata {
    display: flex;
    align-items: center;
    margin-right: 16px;
  }

  .label {
    margin-right: 4px;
    color: #a1a1a2;
  }

  .actions {
    display: flex;
    align-items: center;
  }

  .actionItem {
    margin-right: 16px;
  }

  .controls {
    display: flex;
    align-items: center;
    margin-top: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid #797979;

    .controlsSpan {
      margin-right: 20%;
      font-size: 16px;
    }
  }

  .content {
    margin-top: 16px;
  }

  .images {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
  }

  .image {
    max-width: 300px;
  }
}
// antd弹出框
.cardModal :global(.ant-modal-header) {
  padding-top: 23px;
  color: #02f3dd !important;
  background-color: #232632 !important;
  border: none !important;
  border-radius: 0;
}
.cardModal :global(.ant-modal-title) {
  color: #02f3dd !important;
  font-weight: bolder;
  text-align: center;
}
.cardModal :global(.ant-modal-content) {
  border: 1px solid #797979;
  border-radius: 0;
}

.cardModal :global(.ant-modal-body) {
  color: white;
  background-color: #232632 !important;
  border-radius: none !important;
}
.cardModal :global(.ant-modal-body) {
  color: white;
  background-color: #232632 !important;
  border-radius: none !important;
}

.cardModal :global(.ant-modal-close-x) {
  color: white;
}

.cardModal :global(.ant-modal) {
  width: 1000px !important;
  // background-color: red !important;
}
