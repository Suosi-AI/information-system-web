/* App.module.css */
.appHeader {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100vh;
  color: white;
  background-image: url('../../assets/images/bg@2x.599d5a93.png');

  background-position: center; /* 将背景图片居中显示 */
}
.loginContent2 {
  width: 450px;
  min-height: 520px;
  background-color: #152932;
  box-shadow: 0 2px 4px 0 #02f3dd;
}
.login-img {
  width: 100%;
  padding: 34px 34px 0 34px;
}
.login-form {
  /* background-color: red; */
  height: 70%;
  margin: 18px;
}
.login-form-item {
  /* height: 50px; */
  /* line-height: 50px; */
  margin-top: 40px;
  font-size: 14px;
  border: 1px solid rgba(32, 53, 128, 0.16);
}
.login-form-input {
  height: 50px;
}
.site-form-item-icon {
  margin-right: 10px;
  color: #7c7c7c;
  font-size: 20px;
}
.login-form-button {
  width: 100%;
  height: 50px;
  margin-top: 15px;
  padding: 0;
  font-size: 16px;
  line-height: 50px;
  background-color: #02f3dd;
  border: none;
  border-radius: 3px;
}
